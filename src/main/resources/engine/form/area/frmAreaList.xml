<?xml version="1.0" encoding="UTF-8"?>
<tsoftware xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../componentConfig.xsd">
	<ui_layer>
		<ui name="frmAreaList" title="大区管理">
			<panel name="pToolbar" title="工具条" object="" type="Toolbar">
				<control name="btnQuery" title="查询" property="" type="Button"
					edit="" required="" format="" width="" height="" column="" />
				<control name="btnClear" title="清空条件" property="" type="Button"
					edit="" required="" format="" width="" height="" column="" />
				<control name="btnCreate" title="新增大区" property="" type="Button"
					edit="" required="" format="" width="" height="" column="" />
			</panel>


			<panel name="pCondition" title="查询条件" object="area" type="Group">
				<control name="lk_name" title="大区名称" property="name" type="TextBox"
					edit="Y" required="N" format="" width="1" height="1" column="3" />
			</panel>

			<panel name="pTable" title="查询结果" object="area" type="Grid">
				<control name="id" title="id" property="id" type="Hidden"
					edit="" required="" format="" width="1" height="" column="" />
				<control name="edit" title="编辑" property="" type="Link"
					edit="" required="" format="" width="100" height="" column="" />
				<control name="delete" title="删除" property="" type="Link"
					edit="" required="" format="" width="100" height="" column="" />
				<control name="name" title="大区名称" property="name" type="DataLink"
					edit="" required="" format="" width="100" height="" column="" />
				<control name="createTime" title="创建时间" property="createTime"
					type="TextBox" edit="" required="N" format="" width="180" height="1"
					column="" />
				<control name="eq_updateTime" title="修改时间" property="updateTime"
					type="TextBox" edit="" required="N" format="" width="180" height="1"
					column="" />
				<control name="creater" title="创建人" property="creater" type="Hidden"
					edit="" required="N" format="" width="180" height="1" column="" />
				<control name="eq_updater" title="修改人" property="updater"
					type="Hidden" edit="" required="" format="" width="180" height="1"
					column="" />

			</panel>


			<!-- 逻辑加载 -->
			<flow trigger="" event="OnLoad" filter="">
				<procedure name="jClear" logic="Clear" ifyes="Query" ifno=""
					sync="Y">
					<param name="Out" value="pCondition"></param>
				</procedure>

				<procedure name="Query" logic="Query" ifyes="" ifno="">
					<param name="In" value="pCondition"></param>
					<param name="Out" value="pTable"></param>
					<param name="Sql" value="area/Qryarea"></param>
				</procedure>
			</flow>
			<!-- 清空条件 -->
			<flow trigger="pToolbar.btnClear" event="OnClick" filter="">
				<procedure name="clear" logic="Clear" ifyes="" ifno=""
					sync="Y">
					<param name="Out" value="pCondition"></param>
				</procedure>
			</flow>

			<!--点击查看详情 -->
			<flow trigger="pTable.name" event="OnClick" filter="">
				<procedure name="annEncodeId" logic="EncodeId" ifyes="j1"
					ifno="">
					<param name="In" value="pTable.id"></param>
				</procedure>
				<procedure name="j1" logic="Transition" ifyes="" ifno="">
					<param name="To" value="frmAreaDetail1"></param>
					<param name="Mode" value="ReadOnly"></param>
				</procedure>
			</flow>


			<!-- 查询点击事件 -->
			<flow trigger="pToolbar.btnQuery" event="OnClick" filter="">
				<procedure name="Query" logic="Query" ifyes="" ifno=""
					sync="Y">
					<param name="In" value="pCondition"></param>
					<param name="Out" value="pTable"></param>
					<param name="Sql" value="area/Qryarea"></param>
				</procedure>
			</flow>


			<!-- 新增点击事件 -->

			<flow trigger="pToolbar.btnCreate" event="OnClick" filter="">
				<procedure name="jspopup" logic="Popup" ifyes="jsquery"
					ifno="">
					<param name="To" value="frmAreaCreate" />
					<param name="Mode" value="Add" />
					<param name="Window" value="Medium" />
					<param name="Title" value="新增大区" />
				</procedure>

				<procedure name="jsquery" logic="Query" ifyes="" ifno="">
					<param name="Out" value="pTable" />
					<param name="Sql" value="area/Qryarea" />
				</procedure>

			</flow>


			<!-- 编辑 -->
			<flow trigger="pTable.edit" event="OnClick" filter="">
				<procedure name="jsencodeid" server="" logic="EncodeId"
					ifyes="jspopup" ifno="">
					<param name="In" value="pTable.id"></param>
				</procedure>
				<procedure name="jspopup" logic="Popup" ifyes="jsquery"
					ifno="">
					<param name="To" value="frmAreaEdit" />
					<param name="Mode" value="Edit" />
					<param name="Window" value="Medium" />
					<param name="Title" value="编辑" />
				</procedure>
				<procedure name="jsquery" logic="Query" ifyes="" ifno="">
					<param name="In" value="pCondition" />
					<param name="Out" value="pTable" />
					<param name="Sql" value="area/Qryarea" />
				</procedure>
			</flow>

			<!--删除 -->
			<flow trigger="pTable.delete" event="OnClick" filter="">
				<procedure name="j0" server="" logic="ConfirmMsg" ifyes="j1"
					ifno="">
					<param name="Title" value="删除提示" />
					<param name="Msg" value="确认删除大区吗?" />
				</procedure>
				<procedure name="j1" server="" logic="EncodeId" ifyes="j2"
					ifno="">
					<param name="In" value="pTable.id" />
				</procedure>
				<!--<procedure name="j2" logic="Delete" ifyes="j3" ifno="j3">-->
					<!--<param name="In" value="pTable" />-->
					<!--<param name="Msg" value="'已删除'" />-->
					<!--<param name="Constraints" value="t_school.region_id|有学校绑定该大区;" />-->
				<!--</procedure>-->
				<procedure name="j2" logic="SaveCustom" ifyes="j3" ifno="j3">
					<param name="In" value="pTable"/>
					<param name="Msg" value="'已删除'"/>
					<param name="Sql" value="khAdmin/resourcesManage/QryTest"/>
					<param name="Plugin" value="deleteAreaPlugin"/>
				</procedure>
				<procedure name="j3" logic="Query" ifyes="" ifno="">
					<param name="In" value="pCondition" />
					<param name="Out" value="pTable" />
					<param name="Sql" value="area/Qryarea" />
				</procedure>
			</flow>

			<!-- 布局 -->
			<layout>
				<region location="North" scale="">
					<subregion panel="pToolbar" location="North" scale="" />
				</region>
				<region location="Center" scale="">
					<subregion panel="pCondition" location="North" scale="" />
					<subregion panel="pTable" location="Center" scale="" />
				</region>
			</layout>
		</ui>
	</ui_layer>
</tsoftware>